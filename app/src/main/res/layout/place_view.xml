<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpUsage, RtlHardcoded">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/place_cell"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <android.support.v7.widget.CardView
                android:id="@+id/navigate_button"
                android:layout_marginRight="4dp"
                style="@style/place_action_card">

                <LinearLayout style="@style/place_action_container">
                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/navigate_icon"
                        android:textSize="32dp"
                        android:textColor="@color/blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/navigate_here"
                        android:textSize="17dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/call_button"
                android:layout_marginLeft="4dp"
                style="@style/place_action_card">

                <LinearLayout style="@style/place_action_container">
                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/call_icon"
                        android:textSize="32dp"
                        android:textColor="@color/green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/call_place"
                        android:textSize="17dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="4dp"
            android:text="@string/photos"
            android:textColor="@color/dark_gray"
            android:textSize="21dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/place_photos"
            style="@style/horizontal_gallery"/>
    </LinearLayout>
</ScrollView>
